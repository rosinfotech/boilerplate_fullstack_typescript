{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": ["./*"],
            "@/configs/*": ["../../configs/*"],
            "@/types/*": ["../../types/*"],
            "@shared/types/*": ["../../types/*"],
            "@shared/utils/*": ["../../utils/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "exclude": [
        ".build.frontend",
        ".build.mobile",
        ".next",
        "android",
        "build",
        "dist",
        "ios",
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../../types/**/*.d.ts",
        ".build.mobile/types/**/*.ts",
        ".next/types/**/*.ts",
        "next-env.d.ts",
        ".build.frontend/types/**/*.ts"
    ]
}
