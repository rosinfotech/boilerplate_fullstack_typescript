{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@backend/*": ["./*"],
            "@shared/types/*": ["../../types/*"],
            "@shared/utils/*": ["../../utils/*"]
        },
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020"
    },
    "exclude": [".build.backend", "dist"],
    "include": ["**/*.ts"]
}
