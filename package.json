{
    "name": "@rosinfo.tech/boilerplate_fullstack_typescript",
    "description": "Rosinfotech Boilerplate Fullstack TypeScript",
    "version": "0.0.4",
    "author": "rosinfo.tech",
    "license": "UNLICENSED",
    "scripts": {
        "build": "npm run build:frontend && npm run build:backend",
        "build:backend": "npm run build --workspace=@apps/backend",
        "build:frontend": "npm run build --workspace=@apps/frontend",
        "build:mobile": "npm run build:mobile --workspace=@apps/frontend",
        "build:mobile:android": "npm run build:mobile:android --workspace=@apps/frontend",
        "build:mobile:ios": "npm run build:mobile:ios --workspace=@apps/frontend",
        "dev": "npm run dev:frontend & npm run dev:backend",
        "dev:backend": "npm run dev --workspace=@apps/backend",
        "dev:frontend": "npm run dev --workspace=@apps/frontend",
        "dev:mobile": "npm run dev:mobile --workspace=@apps/frontend",
        "dev:mobile:android": "npm run dev:mobile:android --workspace=@apps/frontend",
        "dev:mobile:ios": "npm run dev:mobile:ios --workspace=@apps/frontend",
        "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
        "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
        "husky:pre-commit": "npm run format:fix && npm run stylelint:fix && npm run lint:fix",
        "husky:pre-push": "",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "mobile:assets": "npm run mobile:assets --workspace=@apps/frontend",
        "mobile:init": "npm run mobile:init --workspace=@apps/frontend",
        "prepare": "husky",
        "start": "npm run start --workspace=@apps/frontend",
        "start:backend": "npm run start --workspace=@apps/backend",
        "start:frontend": "npm run start --workspace=@apps/frontend",
        "stylelint": "stylelint \"**/*.{css,scss}\"",
        "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix",
        "type-check": "tsc --noEmit && npm run type-check --workspace=@apps/backend && npm run type-check --workspace=@apps/frontend",
        "type-check:backend": "npm run type-check --workspace=@apps/backend",
        "type-check:frontend": "npm run type-check --workspace=@apps/frontend"
    },
    "devDependencies": {
        "@capacitor-community/safe-area": "^8.0.1",
        "@capacitor/android": "^8.0.0",
        "@capacitor/assets": "^3.0.5",
        "@capacitor/cli": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "@capacitor/ios": "^8.0.0",
        "@capacitor/local-notifications": "^8.0.0",
        "@eslint/js": "^9.39.2",
        "@rosinfo.tech/eslint-config-import": "^0.0.9",
        "@rosinfo.tech/eslint-config-javascript": "^0.0.32",
        "@rosinfo.tech/eslint-config-react": "^0.0.20",
        "@rosinfo.tech/eslint-config-typescript": "^0.0.27",
        "@rosinfo.tech/prettier-config-standard": "^0.0.12",
        "@rosinfo.tech/stylelint-config-standard": "^0.0.8",
        "@types/connect": "^3.4.38",
        "@types/node": "^22.10.2",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19.0.2",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9",
        "eslint-config-next": "^15.1.3",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss-import": "^16.1.1",
        "prettier": "^3.7.4",
        "stylelint": "^16.26.1",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.50.1"
    },
    "engines": {
        "node": ">=18.17.0",
        "npm": ">=9.0.0"
    },
    "private": true,
    "type": "module",
    "workspaces": [
        "src/apps/*",
        "src/types",
        "src/utils"
    ]
}
